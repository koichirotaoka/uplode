
 <div class="top-wrapper">
    <div class="container">
      <h1>投稿一覧</h1>
      <p><%= notice %></p>
        <% @blogs.each do |blog| %>
          <div class="col-xs-12 col-md-6 blog-panel" align="center" valign="top">
            <p><span><%= blog.content %></span></p>
            <div class="blog-links">
              <%= link_to '詳細', blog_path(blog.id), class: 'btn btn-success' %>
              <% if logged_in? %>
                <% if blog.user_id == current_user.id %>
                  <%= link_to '編集', edit_blog_path(blog.id), class: 'btn btn-warning' %>
                  <%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除して宜しいいでしょうか？' }, class: 'btn btn-danger' %>
                <% else %>
                  投稿者以外は操作出来ません
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>  
    </div>
  </div>
  <div class="message-wrapper">
    <div class="container">
      <div class="heading">
      </div>
    </div>
  </div>